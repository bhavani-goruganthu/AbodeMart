<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:outlineAmbientShadowColor="@color/colorThemeGreen"
    android:outlineSpotShadowColor="@color/colorThemeGreen"
    app:cardMaxElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <com.example.abodemart.utils.MSPTextViewBold
                android:id="@+id/card_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tomato"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <com.example.abodemart.utils.MSPTextView
                    android:id="@+id/card_item_storeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store:  "
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <com.example.abodemart.utils.MSPTextView
                    android:id="@+id/card_item_storeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costco"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/add_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_circle_24"
                    app:tint="@color/colorThemeGreen" />

                <com.example.abodemart.utils.MSPTextViewBold
                    android:id="@+id/count_cart_item"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/item_grey_border_background" />

                <ImageView
                    android:id="@+id/remove_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_remove_circle_24"
                    app:tint="@color/colorThemeGreen" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >

                <ImageView
                    android:id="@+id/delete_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:tint="@android:color/holo_red_light" />

                <com.example.abodemart.utils.MSPTextViewBold
                    android:id="@+id/cart_item_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="$ 10.00"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>